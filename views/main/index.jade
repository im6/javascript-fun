extends ../layout

block content
    main
        each oneGroup, index1 in list
            br
            h3.grpTitle
                |   #{oneGroup.name}
            .pure-g
                each oneLink, index2 in oneGroup.list
                    .pure-u-xl-1-4.pure-u-lg-1-3.pure-u-md-1-2.pure-u-sm-1-2.pure-u-1-2
                        .box
                            .boxLeft
                                - var imgPath = remoteAsset + '/' + (oneLink.img ? oneLink.img : 'github2.svg');
                                img(src=imgPath)
                            .boxRight
                                h5(title=oneLink.desc) #{oneLink.name}
                                div
                                    a(href="https://github.com/#{oneLink.github}" target="_blank")
                                        img(src=remoteAsset + '/' + (icon || icon_default))
                                        | #{oneLink.star}
            br
    p.updateTxt

