mixin TagGroup(tags)
    each v,k in tags
        - var tagCls = "tag_" + (k % 5);
        div.tag(class="#{tagCls}")=v
mixin ArticleTitle(obj)
    .articleTitle
        p.time=obj.time
        h1.title=obj.title
        +TagGroup(obj.about)

doctype html
html
    include head
body
    .pure-g
        .pure-u-1-4.sidebar
            include sidebar
        .pure-u-3-4.content
            block content
            include footer


